<form  action="/singup" method="post">

    <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-3">Sign up</h1>
                <a class="btn btn-primary btn-lg" href="/login"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                data-bs-original-title="Voltar"
                role="button">
                <i class="fa-solid fa-circle-left"></i></a>
            </div>
    <hr class="my-4"> 
    <div class="form-group">
      <label for="name" class="form-label mt-4">Nome</label>
      <input type="text" name="name"  class="form-control rounded-3" minlength="3" id="name" aria-describedby="your name" required>
    </div>
    <div class="form-group">
      <label for="email" class="form-label mt-4">Email</label>
      <input type="email"  name="email" class="form-control rounded-3" id="email" aria-describedby="your email" required>
    </div>
    <div class="form-group">
      <label for="password" class="form-label mt-4">Password</label>
      <input type="text"  name="password" class="form-control rounded-3" id="password" aria-describedby="your password" required>
    </div>
    <div class="form-group">
      <label for="passwordverify" class="form-label mt-4">Confirm Password</label>
      <input type="text" name="passwordverify" class="form-control rounded-3" id="passwordverify" aria-describedby="your password" required>
    </div>

    <div class="form-group">
      <label for="curso" class="form-label mt-4">Selecione seu curso</label>
      <select class="form-select" name="curso" id="curso">
        {{#each cursos}}
        <option value="{{id}}">{{nome}} - {{sigla}}</option>
        {{/each}}
        
      </select>
    </div>

    <div class="form-group">
        <div class="form-check mt-4">
            <input class="form-check-input" type="checkbox" name="useTerms" value="1" id="useTerms" required>
            <label class="form-check-label" for="useTerms">Concordo com os termos de uso<a href="#"><strong> termos de uso</strong></a></label>
            </label>
        </div>
    </div>
    
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button  id="btn-send" type="submit" value="Enviar" class="btn btn-outline-primary btn-lg btn-block mt-5 w-100">Sign up</button>

</form>